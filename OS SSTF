def fcfs(requests, head):
 differences = []
    movements = 0
    for req in requests:
        differences.append(abs(req - head))
        movements += abs(req - head)
        head = req
    return differences, movements
head = int(input("Enter the initial position of the disk head: "))
requests = [int(req) for req in input("Enter the disk requests (space-separated): ").split()]
if not requests:
    print("Error: Please enter at least one disk request.")
else:
    diff, mov = fcfs(requests, head)
    print("Differences:", ", ".join(str(d) for d in diff))
    print("Total movements:", mov)

Output
Enter the initial position of the disk head: 50
Enter the disk requests (space-separated): 40 30 20 10
Differences: 10, 10, 10, 10
Total movements: 40
